extends standalone-base.pug

block head
    link(rel="stylesheet", href=linkifyStatic("/css/widget_standalone.css"))      
    
    title Directory Index: '#{dir}'

block titlemixin 
    include mixins/main_head_title.mixin.pug
    
block body
    .widget_container
        h1 Directory: '#{dir}'
        hr
        each page in widgets
            a.button(href=page.link) #{page.name}
            br