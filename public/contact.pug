extends /standalone-base.pug

block head
    style.
        #content_main {
            justify-content: center;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        #contact {
            padding: 1rem;
            border-radius: 0.5rem;
            border: 1px solid var(--color-base-1);
            box-sizing: border-box;
            width: clamp(10ch, 45ch, 100vw);
        }
        .contact_container {
            display: flex;
            flex-direction: column;
            align-items: stretch;
            gap: 0.75rem;
            width: 100%;
        }        
        .contact_container label {
            display: flex;
            flex-direction: column;
            gap: 0.25em;
        }
        #contact hr {
            width: 15rem;
            margin: 1rem 0;
            border-color: var(--color-accent-1);
            color: var(--color-accent-1);
        }

    title Contact Me - JPCode.Dev

block titlemixin 
    include /mixins/main_head_title.mixin.pug
    

block body
    #contact.flex.col.aligncenter 
        h1 Contact Me 
        h2 at #[a(href="mailto:jp@jpcode.dev") jp@jpcode.dev]
        hr
        form.contact_container(action="https://formspree.io/f/mleaglkn" method="POST" name="email-form")
            label Name: #[br]
                input(type="text" size="19" name="cname")
            
            
            label Your Email: #[br]
                input(type="email", name="email")
            

            label Message: #[br]
                textarea(name="message", rows="10")
            
            
            br
            input(type="submit", value="Submit")
    