{
    "tasks": {
        "dev": "deno run --watch main.ts"
    },
    "fmt": {
      "exclude": ["pnpm-lock.yaml"],
        "lineWidth": 80,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false
    },
    "imports": {
        "@http/response": "jsr:@http/response@^0.23.0",
        "@std/assert": "jsr:@std/assert@1",
        "@std/fs": "jsr:@std/fs@^1.0.4",
        "@std/http": "jsr:@std/http@^1.0.7",
        "@std/json": "jsr:@std/json@^1.0.0",
        "@std/path": "jsr:@std/path@^1.0.6",
        "@x/dirname": "https://deno.land/x/dirname@1.1.2/mod.ts",
        "@x/jsonfile": "https://deno.land/x/jsonfile@1.0.0/mod.ts",
        "@x/pug": "https://deno.land/x/pug@v0.1.6/mod.ts"
    },
    "compilerOptions": {
        "checkJs": false,
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    }
}
